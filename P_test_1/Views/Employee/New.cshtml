@model Employee
@{
    ViewData["Title"] = "New";
    SelectList selectLists = new SelectList(ViewBag.departments, "Id", "Name");
}

<h1>New</h1>

<form method="post" asp-action="SaveAdd" asp-controller="Employee" enctype="multipart/form-data">
    @* <div asp-validation-summary="All"></div> *@
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />

        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
        <br />

        <label asp-for="JobTitle"></label>
        <input asp-for="JobTitle" class="form form-control" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>
        <br />

        @* <label>Image URL</label>
        <input asp-for="ImageURL" class="form form-control" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>
        <br /> *@

        <label asp-for="Address"></label>
        <input asp-for="Address" class="form form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
        <br />

        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" type="file" />
        <span asp-validation-for="Image" class="text-danger"></span>
        <br />

        <label asp-for="DptID"></label>
        @* <input asp-for="DptID" class="form form-control" /> *@
        <select class="form form-control" asp-items="selectLists" asp-for="DptID">
            <option value="0">Select Department</option>
        </select>
        <span asp-validation-for="DptID" class="text-danger"></span>
        <br />
    </div>

    <input type="submit" value="Create" class="btn btn-success" style="margin:10px"/>
    <a asp-action="Index">Back to list</a>
</form>


@*jquary using*@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>